<div data-controller="submission">
  <% if submit_button == true %>
    <%= form_for :bookmark, remote: true, url: bookmarks_import_path do |f| %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="flex">
        <span class="button-like" data-action="click->submission#addSourceLink">Add</span>
        <textarea
          data-submission-target="sourceToAdd"
          placeholder="<%= placeholder_text %>"
          autocomplete='off'>
        </textarea>
      </div>
      <ul id='sources-list' data-submission-target='sourcesList'></ul>
      <input id="websites" type="hidden" name="bookmark[websites]" data-submission-target="websiteList">
      <%= f.submit %>
    <% end %>
  <% else %>
    <div class="flex">
      <span class="button-like" data-action="click->submission#addSourceLink">Add</span>
      <input
        data-submission-target="sourceToAdd"
        placeholder="<%= placeholder_text %>"
        autocomplete='off'>
      </div>
      <ul id='sources-list' data-submission-target='sourcesList'></ul>
      <input id="websites" type="hidden" name="bookmark[websites]" data-submission-target="websiteList">
    <% end %>
  </div>
