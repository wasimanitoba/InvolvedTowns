<h1>Collections</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.title %></td>
        <td><%= collection.description %></td>
        <td><%= collection.user_id %></td>
        <td><%= link_to 'Show', user_collection_path(collection) %></td>
        <td><%= link_to 'Edit', edit_user_collection_path(collection) %></td>
        <td><%= button_to 'Destroy', user_collection_path(collection), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Collection', new_user_collection_path(current_user) %>
