

<h1>Tags</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.title %></td>
        <td><%= tag.user_id %></td>
        <td><%= link_to 'Show', user_tag_path(id: tag, user_id: tag.user_id) %></td>
        <td><%= link_to 'Edit', edit_user_tag_path(id: tag, user_id: tag.user_id) %></td>
        <td><%= link_to 'Destroy', user_tag_path(id: tag, user_id: tag.user_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_user_tag_path(user_id: current_user) %>
