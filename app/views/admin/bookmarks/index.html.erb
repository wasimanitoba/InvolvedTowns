<h1>Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>Bookmark</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= link_to(bookmark, href: bookmark.url) %></td>
        <td><%= User.find(bookmark.user_id).to_s %></td>
        <td><%= link_to 'Show', user_bookmark_path(id: bookmark, user_id: bookmark.user_id) %></td>
        <td><%= link_to 'Edit', edit_user_bookmark_path(id: bookmark, user_id: bookmark.user_id) %></td>
        <td><%= button_to 'Destroy', user_bookmark_path(id: bookmark, user_id: bookmark.user_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookmark', new_user_bookmark_path(current_user) %>
