

<h1>Reminders</h1>

<table>
  <thead>
    <tr>
      <th>Due</th>
      <th>Excerpt</th>
      <th>User</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.due %></td>
        <td><%= reminder.excerpt %></td>
        <td><%= reminder.user_id %></td>
        <td><%= reminder.type %></td>
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= button_to 'Destroy', reminder, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Reminder', new_user_reminder_path(current_user) %>