<div class="flex justify-apart">
  <%- if current_user %>
    <%= link_to('My Notes', Rails.application.routes.url_helpers.user_notes_path(user_id: current_user.id)) %>
    <%= link_to('My Bookmarks', Rails.application.routes.url_helpers.user_bookmarks_path(user_id: current_user.id)) %>
    <%= link_to('My Collections', Rails.application.routes.url_helpers.user_collections_path(user_id: current_user.id)) %>
    <%= link_to('My Reminders', Rails.application.routes.url_helpers.user_reminders_path(user_id: current_user.id)) %>
    <%= link_to('My Tags', Rails.application.routes.url_helpers.user_tags_path(user_id: current_user.id)) %>
    <%= link_to('Messages', Rails.application.routes.url_helpers.messages_path) %>
<%- else %>
    <%= link_to 'To save to the cloud, create an account!', new_user_registration_path %>
<%- end %>
</div>
